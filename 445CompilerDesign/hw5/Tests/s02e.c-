bool runningSum;

int sum(bool init; int x) {
    static int runningSum;

    if (init) runningSum = 0;
    else runningSum += x;

    return runningSum;
}

  main()
{
    sum(true, 666);
    sum(false, 3);
    output(sum(false, 0));
}
